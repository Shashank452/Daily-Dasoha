<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DailyDasoha" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <!-- Base dark theme -->
    <style name="Theme.DailyDasoha.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Dark theme colors but keeping text dark -->
        <item name="colorPrimary">@color/primary_dark_theme</item>
        <item name="colorPrimaryDark">@color/primary_dark_dark_theme</item>
        <item name="colorAccent">@color/accent_dark_theme</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="cardBackgroundColor">@color/card_background_dark</item>

        <!-- Table colors for dark theme -->
        <item name="tableHeaderBackground">@color/primary_dark_theme</item>
        <item name="tableCellBackground">@color/card_background_dark</item>
        <item name="tableHeaderTextColor">@color/primary_text</item>
        <item name="tableCellTextColor">@color/primary_text</item>
        <item name="tableBorderColor">@color/divider</item>
    </style>

    <style name="PopupMenuStyle.Dark" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:itemBackground">@color/card_background_dark</item>
        <item name="android:popupBackground">@color/card_background_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView.Dark</item>
    </style>

    <style name="PopupMenuListView.Dark" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="TableHeaderStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>